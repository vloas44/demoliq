{% extends 'base.html.twig' %}

{% block content %}
    <h1>Les questions à débattre</h1>

    <table class="table table-striped">
        <tr>
            <th>Sujet(s)</th>
            <th>Question</th>
            <th>Appuis</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>

        {# affichage des questions ici #}
        {% for question in questions %}
            <tr>
                <td>
                    {% for subject in question.subjects %}
                        <div>
                            {{ subject.label }}
                        </div>
                    {% endfor %}
                </td>
                <td>{{ question.title }}</td>
                <td>{{ question.supports }}</td>
                <td>{{ question.creationDate|date('d-m-Y') }}</td>
                <td><a class="btn-sm btn-primary"
                       href="{{ path('question_detail',{'id': question.id }) }}" >Débattre</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

